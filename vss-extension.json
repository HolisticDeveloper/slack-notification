{
    "manifestVersion": 1,
    "id": "slack-notification",
    "name": "Slack Notification",
    "publisher": "kasunkodagoda",
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],    
    "description": "Slack Notification task with advanced slack message customization for Visual Studio Team Services",
    "categories": [
        "Build and release"
    ],
    "galleryFlags": [
        "Public"
    ],
    "tags": [ "build", "release", "notification", "slack", "chat", "messages" ],
    "icons": {
        "default": "marketplace-icon.png"        
    },
    "content": {
        "details": {
            "path": "overview.md"
        },
        "license": {
            "path": "license.md"
        }
    },
    "links": {
        "getstarted": {
            "uri": "https://github.com/kasunkv/slack-notification/wiki"
        },
        "support": {
            "uri": "https://github.com/kasunkv/slack-notification/issues"
        },
        "repository": {
            "uri": "https://github.com/kasunkv/slack-notification"
        },
        "issues": {
            "uri": "https://github.com/kasunkv/slack-notification/issues"
        }
    },
    "branding": {
        "color": "rgb(28, 120, 25)",
        "theme": "dark"
    },
    "repository": {
        "type": "git",
        "uri": "https://github.com/kasunkv/slack-notification"
    },
    "files": [
        {
            "path": "buildtask"
        },
        {
            "path": "images"
        }
    ],
    "contributions": [
        {
            "id": "slack-notification-task",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "buildtask/SlackNotification"
            }
        }
    ],
    "CustomerQnASupport": {
        "enableqna":"true"
    } 
}